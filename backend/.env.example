# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/indulink
# For production, use MongoDB Atlas connection string:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/indulink?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880
# 5MB = 5 * 1024 * 1024 bytes

# CORS Configuration
CLIENT_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes = 15 * 60 * 1000 ms
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for future password reset features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Pagination Defaults
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
# For production, set FIREBASE_SERVICE_ACCOUNT_KEY to the JSON string of your service account key
# FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}
# For local development, set path to service account JSON file
# FIREBASE_SERVICE_ACCOUNT_PATH=./path/to/serviceAccountKey.json

# CDN Configuration
CDN_ENABLED=false
CDN_BASE_URL=https://cdn.indulink.com
BACKEND_URL=https://indulink-1.onrender.com

# Cloudflare Configuration (for cache purging)
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# New Relic APM Configuration
NEW_RELIC_APP_NAME=Indulink E-commerce API
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_LOG_LEVEL=info

# Alert Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ALERT_EMAIL_RECIPIENTS=admin@indulink.com,dev@indulink.com
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
